package catalog;
import java.io.File;

public class Test3 {

    public static void main(String args[]) {

        String dirname = "C:/Documents and Settings/relexuser/workspace/Test Project/src"; // имя каталога
                                                                                                   
        // String dirname = "C:/Documents and Settings"; // имя каталога

        File f1 = new File(dirname);

        if (f1.isDirectory()) { // является ли f1 каталогом

            System.out.println("Directory of " + dirname);

            String s[] = f1.list();

            for (int i = 0; i < s.length; i++) {
                
                dirname = dirname + "/" + s[i];
                File f = new File(dirname );

                while (f.isDirectory()) { System.out.println(s[i] + " is a directory");
                    
                            
                }

                    System.out.println(s[i] + " is a file");

                }
            }
        } else {

            System.out.println(dirname + " is not a directory");

        }
    }
}
