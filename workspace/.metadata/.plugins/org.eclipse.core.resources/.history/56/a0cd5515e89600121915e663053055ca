package ru.relex.education.Course;

import ru.relex.education.Course.Order;
import ru.relex.education.Course.SideOfTheWorld;

/**
 * Класс расчета стороны света при заданном текущем курсе и требуемом изменении направления.
 * @author Vladimir K.
 *
 */
class  Course2 {
    
    /**
     * @param course  текущий курс
     * @param course2 требуемое изменение направления
     * @return результирующий курс
     */
    public static String changeingCourse(SideOfTheWorld currentDirection, Order newDidection) {
        
        int numberchange = 0;
        
        switch (newDidection){
            case ВПЕРЕД :
                numberchange = 0;
                break;
            case ВПРАВО :  
                numberchange = 1;
                break;
            case НАЗАД :
                numberchange = 2;
                break;
            case ВЛЕВО :
                numberchange = 3;
                break;
        }
        
        
        for (int i = 0; i<numberchange; i++){
            if (currentDirection.equals(SideOfTheWorld.NORTH)) {
                currentDirection = SideOfTheWorld.EAST;
                continue;
            }
            if (currentDirection.equals(SideOfTheWorld.EAST)) {
                currentDirection = SideOfTheWorld.SOUTH;
                continue;
            }
            if (currentDirection.equals(SideOfTheWorld.SOUTH)) {
                currentDirection = SideOfTheWorld.WEST;
                continue;
            }
            if (currentDirection.equals(SideOfTheWorld.WEST)) {
                currentDirection = SideOfTheWorld.NORTH;
                continue;
            }
        }
        
        return currentDirection.name();
    }
    
}
